# ==============================================
# AI Client Discovery - Environment Variables
# ==============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ----------------------------------------------
# Flask Configuration
# ----------------------------------------------
SECRET_KEY=your-super-secret-key-here-change-this
FLASK_ENV=production

# ----------------------------------------------
# Database (PostgreSQL)
# ----------------------------------------------
# For Docker: Use these values
POSTGRES_USER=aiuser
POSTGRES_PASSWORD=changeThisPassword123
DATABASE_URL=postgresql://aiuser:changeThisPassword123@db:5432/campaigns

# For non-Docker: Use SQLite
# DATABASE_URL=sqlite:///instance/campaigns.db

# ----------------------------------------------
# Apollo API (SECURE - Session Manager ONLY)
# ----------------------------------------------
APOLLO_API_KEY=your-apollo-api-key-here

# ----------------------------------------------
# Gemini AI API
# ----------------------------------------------
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_API_KEY_FALLBACK=your-fallback-gemini-key-here

# ----------------------------------------------
# Google OAuth (Gmail Integration)
# ----------------------------------------------
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret

# ----------------------------------------------
# Microsoft OAuth (Outlook Integration) - Optional
# ----------------------------------------------
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id
REDIRECT_URI=http://localhost:5000/auth/callback

# ----------------------------------------------
# Frontend Configuration
# ----------------------------------------------
# For Docker with Nginx: Use internal docker network
NEXT_PUBLIC_API_URL=http://localhost:5000

# For production: Use your domain
# NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# ----------------------------------------------
# Optional: Google Custom Search API
# ----------------------------------------------
GOOGLE_API_KEY=your-google-api-key
GOOGLE_CX_CODE=your-custom-search-engine-code
